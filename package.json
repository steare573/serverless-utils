{
  "name": "serverless-utils",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/steare573/serverless-utils",
  "scripts": {
    "lint": "npx eslint --fix ./src ./tests",
    "test": "NODE_ENV=test jest",
    "coverage": "NODE_ENV=test jest --coverage"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "proxyquire": "^2.1.0"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "./(packages)/[^/]+/tests/.+\\.test.js$",
    "collectCoverageFrom": [
      "packages/*/src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
